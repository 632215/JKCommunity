<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_gray_default"
    android:orientation="vertical">

    <EditText
        android:id="@+id/ed_suggest"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_400"
        android:layout_marginTop="@dimen/base_dimen_20"
        android:background="@color/white"
        android:gravity="left|top"
        android:hint="@string/feed_back_hid_msg"
        android:padding="@dimen/base_dimen_20"
        android:textColor="@color/main_present_text_black"
        android:textColorHint="#999999"
        android:textSize="14sp" />
</LinearLayout>