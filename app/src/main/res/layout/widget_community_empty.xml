<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/base_dimen_200"
        android:src="@mipmap/icon_bind_house_no"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="@dimen/base_dimen_64"
        android:text="@string/widget_community_empty_no"
        android:textColor="@color/acticivty_bind_house_color2"
        android:textSize="@dimen/base_dimen_28"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="@dimen/base_dimen_16"
        android:text="@string/widget_community_empty_tips"
        android:textColor="@color/acticivty_bind_house_color2"
        android:textSize="@dimen/base_dimen_28"/>

</LinearLayout>