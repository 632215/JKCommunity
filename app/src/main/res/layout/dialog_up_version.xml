<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c1000000"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="@dimen/base_dimen_100"
    android:paddingRight="@dimen/base_dimen_100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_housekeeper_call_phone_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/base_dimen_61">

            <TextView
                android:id="@+id/tx_version_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/base_dimen_62"
                android:tag="beta_title"
                android:text="JKCommunity"
                android:textColor="@color/main_present_text_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tx_version_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base_dimen_40"
                android:tag="beta_upgrade_info"
                android:text="版本：1.0"
                android:textColor="@color/main_present_text_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base_dimen_30"
                android:text="更新说明:"
                android:textColor="@color/main_present_text_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/base_dimen_61"
                android:tag="beta_upgrade_feature"
                android:text="修复测试ｂｕｇ，修复测试ｂｕｇ修复测试ｂｕｇ修复测试ｂｕｇ修复测试ｂｕｇ修复测试ｂｕｇ修复测试ｂｕｇ"
                android:textColor="@color/main_present_text_gray" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_2"
            android:layout_marginTop="@dimen/base_dimen_60"
            android:background="@color/main_gray_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tx_dialog_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="@dimen/base_dimen_25"
                android:paddingTop="@dimen/base_dimen_25"
                android:tag="beta_cancel_button"
                android:text="取消"
                android:textColor="#0076FF" />

            <View
                android:layout_width="@dimen/base_dimen_2"
                android:layout_height="match_parent"
                android:background="@color/main_gray_default" />

            <TextView
                android:id="@+id/tx_dialog_sure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="@dimen/base_dimen_25"
                android:paddingTop="@dimen/base_dimen_25"
                android:tag="beta_confirm_button"
                android:text="确定"
                android:textColor="#0076FF" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>