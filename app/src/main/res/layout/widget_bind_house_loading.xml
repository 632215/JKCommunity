<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/base_dimen_200"
        android:src="@mipmap/icon_bind_house_loading"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="@dimen/base_dimen_64"
        android:text="@string/activity_bind_house_please_wait"
        android:textColor="@color/acticivty_bind_house_color2"
        android:textSize="@dimen/base_dimen_28"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="@dimen/base_dimen_16"
        android:text="@string/activity_bind_house_please_wait_searching"
        android:textColor="@color/acticivty_bind_house_color2"
        android:textSize="@dimen/base_dimen_32"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@mipmap/icon_bind_hosue_background"/>
    </RelativeLayout>
</LinearLayout>