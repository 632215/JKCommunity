<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/translucent"
                android:orientation="vertical">


    <RelativeLayout
        android:layout_width="@dimen/base_dimen_600"
        android:layout_height="@dimen/base_dimen_700"
        android:background="@mipmap/icon_activity_authorized_relation_bg"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/base_dimen_28"
            android:text="@string/activity_authorization_select_relation"
            android:textColor="@color/white"
            android:textSize="@dimen/base_dimen_36"/>

        <LinearLayout
            android:id="@+id/item_rootView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_230"
            android:layout_above="@+id/ll_operate"
            android:layout_marginBottom="@dimen/base_dimen_50"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tx_family"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_0"
                android:layout_weight="1"
                android:gravity="center"
                android:text="家人"
                android:textColor="@color/activity_authoried_color2"/>

            <TextView
                android:id="@+id/tx_friend"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_0"
                android:layout_weight="1"
                android:gravity="center"
                android:text="朋友"
                android:textColor="@color/activity_authoried_color2"/>

            <TextView
                android:id="@+id/tx_Tenants"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_0"
                android:layout_weight="1"
                android:gravity="center"
                android:text="租赁户"
                android:textColor="@color/activity_authoried_color2"/>

            <TextView
                android:id="@+id/tx_owner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_0"
                android:layout_weight="1"
                android:gravity="center"
                android:text="业主"
                android:textColor="@color/activity_authoried_color2"
                android:visibility="gone"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_operate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tx_cancel"
                android:layout_width="@dimen/base_dimen_0"
                android:layout_height="@dimen/base_dimen_96"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/activity_authorization_relation_cancel"
                android:textColor="@color/activity_authoried_color3"/>

            <TextView
                android:id="@+id/tx_sure"
                android:layout_width="@dimen/base_dimen_0"
                android:layout_height="@dimen/base_dimen_96"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/activity_authorization_relation_sure"
                android:textColor="@color/activity_authoried_color1"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>