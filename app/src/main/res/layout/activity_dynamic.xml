<?xml version="1.0" encoding="utf-8"?>
<com.jinke.community.ui.widget.LoadingLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loading"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:isFirstVisible="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_gray_default"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_dynamic_property"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_dimen_20"
            android:background="@color/white"
            android:paddingBottom="@dimen/base_dimen_40"
            android:paddingLeft="@dimen/base_dimen_24"
            android:paddingRight="@dimen/base_dimen_24"
            android:paddingTop="@dimen/base_dimen_40">

            <ImageView
                android:id="@+id/image_dynamic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_property_dynamic" />

            <TextView
                android:id="@+id/tx_dynamic_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_dimen_34"
                android:layout_marginTop="@dimen/base_dimen_10"
                android:layout_toLeftOf="@+id/tx_property_time"
                android:layout_toRightOf="@+id/image_dynamic"
                android:ellipsize="end"
                android:lines="1"
                android:text="金科云湖物业管理处"
                android:textColor="@color/main_present_text_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tx_dynamic_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tx_dynamic_title"
                android:layout_below="@+id/tx_dynamic_title"
                android:layout_marginRight="@dimen/base_dimen_10"
                android:layout_marginTop="@dimen/base_dimen_12"
                android:layout_toLeftOf="@+id/tx_property_time"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/main_present_text_gray"
                tools:text="关于停电的紧急通知" />

            <TextView
                android:id="@+id/tx_property_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base_dimen_8"
                android:text="今天　07：23"
                android:textColor="#CCCCCC" />

        </RelativeLayout>

        <include layout="@layout/layout_gray_line" />

        <RelativeLayout
            android:id="@+id/rl_dynamic_broken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="@dimen/base_dimen_40"
            android:paddingLeft="@dimen/base_dimen_24"
            android:paddingRight="@dimen/base_dimen_24"
            android:paddingTop="@dimen/base_dimen_40">

            <ImageView
                android:id="@+id/image_broken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_property_broken" />

            <TextView
                android:id="@+id/tx_broken_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_dimen_34"
                android:layout_marginTop="@dimen/base_dimen_10"
                android:layout_toRightOf="@+id/image_broken"
                android:text="小金妹爆料台"
                android:textColor="@color/main_present_text_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tx_broken_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tx_broken_title"
                android:layout_below="@+id/tx_broken_title"
                android:layout_marginRight="@dimen/base_dimen_10"
                android:layout_marginTop="@dimen/base_dimen_12"
                android:layout_toLeftOf="@+id/tx_broken_time"
                android:ellipsize="end"
                android:lines="1"
                android:text="表扬一下最近物业人员"
                android:textColor="@color/main_present_text_gray" />

            <TextView
                android:id="@+id/tx_broken_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="今天　07：23"
                android:textColor="#CCCCCC" />
        </RelativeLayout>
    </LinearLayout>
</com.jinke.community.ui.widget.LoadingLayout>