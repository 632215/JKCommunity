<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/icon_login_background"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/image_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/base_dimen_150"
        android:src="@mipmap/icon_login_company"/>

    <ImageView
        android:id="@+id/img_authentication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_company"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/base_dimen_130"
        android:src="@mipmap/icon_login_phone"/>

    <RelativeLayout
        android:id="@+id/rl_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_authentication"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/base_dimen_190">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tx_method"
            android:layout_alignTop="@+id/tx_method"
            android:src="@mipmap/icon_other_login_bg"/>

        <TextView
            android:id="@+id/tx_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="@string/activity_login_others"
            android:textColor="@color/color_text_second_title"
            android:textSize="@dimen/base_dimen_28"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_qq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_other"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/base_dimen_32"
        android:background="@mipmap/icon_login_bg"
        android:gravity="center">

        <ImageView
            android:id="@+id/image_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_login_qq"/>

        <TextView
            android:id="@+id/login_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_dimen_34"
            android:layout_toRightOf="@+id/image_qq"
            android:text="QQ登录"
            android:textColor="@color/color_text_first_title"
            android:textSize="@dimen/base_dimen_28"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_wechat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_qq"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/base_dimen_40"
        android:background="@mipmap/icon_login_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_login_weixin"/>

        <TextView
            android:id="@+id/login_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_dimen_34"
            android:layout_toRightOf="@+id/image_wechat"
            android:gravity="center_vertical"
            android:text="微信登录"
            android:textColor="@color/color_text_first_title"
            android:textSize="@dimen/base_dimen_28"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_protocol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_wechat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/base_dimen_100">

        <CheckBox
            android:id="@+id/cb_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="true"
            android:drawablePadding="@dimen/base_dimen_20"
            android:drawableStart="@mipmap/icon_activity_break_new_selected"
            android:textColor="@color/activity_broke_news_color"
            android:textSize="@dimen/base_dimen_24"/>

        <TextView
            android:id="@+id/tx_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/cb_protocol"
            android:text="@string/activity_login_protocol"
            android:textColor="@color/color_text_second_title"
            android:textSize="@dimen/base_dimen_24"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_protocol"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/base_dimen_10"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一站式美好生活服务提供商"
            android:textColor="@color/color_text"
            android:textSize="@dimen/base_dimen_20"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/verification_copyright"
            android:textColor="@color/color_text"
            android:textSize="@dimen/base_dimen_20"/>
    </LinearLayout>
</RelativeLayout>