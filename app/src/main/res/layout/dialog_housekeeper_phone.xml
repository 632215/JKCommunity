<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/base_dimen_600"
        android:layout_height="@dimen/base_dimen_720"
        android:layout_centerInParent="true"
        android:background="@mipmap/icon_fragment_housekeeper_call_bg">

        <TextView
            android:id="@+id/tx_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/base_dimen_28"
            android:text="@string/fragment_housekeeper_tips"
            android:textColor="@color/white"
            android:textSize="@dimen/base_dimen_36"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tx_dialog_cancel"
            android:layout_below="@+id/tx_title"
            android:layout_marginTop="@dimen/base_dimen_250"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_hot_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tx_dialog_cancel"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/base_dimen_20"
                android:background="@mipmap/icon_fragment_housekeeper_phone_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tx_hot_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/base_dimen_100"
                    android:text="拨打热线："
                    android:textColor="@color/fragment_housekeeper_color5"
                    android:textSize="@dimen/base_dimen_30"/>

                <TextView
                    android:id="@+id/tx_call_hot_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="400-846-1818"
                    android:textColor="@color/fragment_housekeeper_color6"
                    android:textSize="@dimen/base_dimen_30"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_housekeeper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tx_dialog_cancel"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/base_dimen_20"
                android:background="@mipmap/icon_fragment_housekeeper_phone_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tx_housekeeper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="@dimen/base_dimen_100"
                    android:text="呼叫您的楼栋管家："
                    android:textColor="@color/fragment_housekeeper_color5"
                    android:textSize="@dimen/base_dimen_30"/>

                <TextView
                    android:id="@+id/tx_call_housekeeper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/fragment_housekeeper_color6"
                    android:textSize="@dimen/base_dimen_30"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tx_dialog_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:paddingBottom="@dimen/base_dimen_30"
            android:paddingTop="@dimen/base_dimen_30"
            android:text="取消"
            android:textColor="@color/fragment_housekeeper_color3"/>
    </RelativeLayout>
</RelativeLayout>