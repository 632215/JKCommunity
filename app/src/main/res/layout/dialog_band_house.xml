<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@mipmap/icon_housekeeper_dialog">

        <TextView
            android:id="@+id/tx_call_phone_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/base_dimen_56"
            android:paddingTop="@dimen/base_dimen_40"
            android:text="提示"
            android:textColor="@color/main_present_text_black"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tx_call_phone_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tx_call_phone_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/base_dimen_300"
            android:gravity="center"
            android:text="@string/fragment_housekeeper_housekeeper_tips"
            android:textColor="@color/main_present_text_black"
            android:textSize="@dimen/base_dimen_24"/>


        <LinearLayout
            android:layout_width="@dimen/base_dimen_600"
            android:layout_height="@dimen/base_dimen_90"
            android:layout_below="@+id/tx_call_phone_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/base_dimen_60"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tx_call_phone_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="返回管家"
                android:textColor="@color/pop_layout_community_select_color2"/>

            <TextView
                android:id="@+id/tx_vertical_line"
                android:layout_width="@dimen/base_dimen_2"
                android:layout_height="match_parent"
                android:background="@color/main_gray_line"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tx_call_phone_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="绑定房屋"
                android:textColor="@color/acticivty_bind_house_color4"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>