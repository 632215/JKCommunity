<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/image_authorized_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/base_dimen_150"
        android:src="@mipmap/icon_authorize_empty"/>

    <TextView
        android:id="@+id/tx_authorized_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/base_dimen_84"
        android:text="@string/widget_authorized_empty"
        android:textColor="@color/acticivty_bind_house_color2"
        android:textSize="@dimen/base_dimen_28"/>

</LinearLayout>