<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/empty_reload"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/widget_payment_empty_page"
              android:gravity="center_horizontal"
              android:orientation="vertical">


    <ImageView
        android:id="@+id/empty_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_dimen_100"
        android:background="@mipmap/icon_payment_emppty"/>


    <TextView
        android:id="@+id/no_network_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_dimen_56"
        android:text="您已结清所有物业费用,谢谢支持!"
        android:textColor="#999999"/>


</LinearLayout>