<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <TextView
        android:id="@+id/tx_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/base_dimen_160"
        android:drawablePadding="@dimen/base_dimen_50"
        android:drawableTop="@mipmap/icon_error_activity"
        android:gravity="center_horizontal"
        android:text="系统维护"
        android:textColor="@color/color_text_second_title"/>

    <ImageView
        android:id="@+id/img_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/base_dimen_40"
        android:paddingLeft="@dimen/base_dimen_10"
        android:paddingRight="@dimen/base_dimen_10"
        android:src="@mipmap/icon_error_aactivity_return"/>
</RelativeLayout>