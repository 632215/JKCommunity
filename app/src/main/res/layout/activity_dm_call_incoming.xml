<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/video_call_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/video_call_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/base_dimen_56"
        android:text="@string/video_call_head_hint"
        android:textColor="@color/video_call_1"
        android:textSize="@dimen/base_dimen_36" />

    <ImageView
        android:id="@+id/video_call_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/base_dimen_196"
        android:background="@drawable/video_call_head_3_ico"/>

    <TextView
        android:id="@+id/video_call_head_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/video_call_head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/base_dimen_36"
        android:text="@string/video_call_head_hint"
        android:textColor="@color/video_call_1"
        android:textSize="@dimen/base_dimen_60" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/base_dimen_124">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/video_call_connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/video_call_connect_ico" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/video_call_connect"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/base_dimen_30"
                android:text="@string/video_call_connect"
                android:textColor="@color/video_call_1"
                android:textSize="@dimen/base_dimen_30" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/video_call_hang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/video_call_hang_ico" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/video_call_hang"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/base_dimen_30"
                android:text="@string/video_call_hang"
                android:textColor="@color/video_call_1"
                android:textSize="@dimen/base_dimen_30" />

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>