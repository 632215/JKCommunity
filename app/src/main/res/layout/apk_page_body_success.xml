<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/open_door_bg">

    <RelativeLayout
        android:layout_marginTop="@dimen/base_dimen_100"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/page_head_title"
            android:text="@string/open_door_success"
            android:textSize="@dimen/base_dimen_48"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/base_dimen_226"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/open_door_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/open_door_success"/>

    </RelativeLayout>

</FrameLayout>
