<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/base_dimen_40"
    android:paddingLeft="@dimen/base_dimen_26"
    android:paddingRight="@dimen/base_dimen_30"
    android:paddingTop="@dimen/base_dimen_44">
    <ImageView
        android:id="@+id/item_property_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/item_property_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_dimen_36"
        android:layout_toRightOf="@+id/item_property_image"
        android:text="物业报事"
        android:textColor="@color/main_present_text_black" />
    <TextView
        android:id="@+id/item_property_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_property_title"
        android:layout_marginLeft="@dimen/base_dimen_36"
        android:layout_toRightOf="@+id/item_property_image"
        android:text="2017-07-26 08:36"
        android:textColor="#9C9C9C"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/item_property_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_property_time"
        android:layout_below="@+id/item_property_time"
        android:layout_marginTop="@dimen/base_dimen_22"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="损坏维修报事,高效快捷为您提供优质的物业服务"
        android:textColor="@color/main_present_text_gray"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/tx_item_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/item_property_title"
        android:background="@drawable/shape_broke_preview_bg"
        android:paddingBottom="@dimen/base_dimen_7"
        android:paddingLeft="@dimen/base_dimen_24"
        android:paddingRight="@dimen/base_dimen_24"
        android:paddingTop="@dimen/base_dimen_7"
        android:text="待处理"
        android:textColor="@color/main_them_color" />
</RelativeLayout>