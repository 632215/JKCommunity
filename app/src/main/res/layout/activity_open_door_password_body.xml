<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/base_dimen_26"
        android:layout_marginLeft="@dimen/base_dimen_30"
        android:layout_marginRight="@dimen/base_dimen_26"
        android:layout_marginTop="@dimen/base_dimen_30"
        android:lineSpacingExtra="@dimen/base_dimen_10"
        android:text="@string/open_door_hint"
        android:textColor="@color/open_door_hint_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/base_dimen_30"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/open_door_selecter_house"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/open_door_choice_house_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/base_dimen_26"
                android:layout_marginTop="@dimen/base_dimen_26"
                android:text="@string/open_door_choice_house"
                android:textColor="@color/open_door_hint_color" />

            <TextView
                android:id="@+id/open_door_choice_house"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/open_door_choice_house_hint"
                android:layout_alignBottom="@+id/open_door_choice_house_hint"
                android:layout_marginBottom="@dimen/base_dimen_26"
                android:layout_marginLeft="@dimen/base_dimen_15"
                android:layout_marginTop="@dimen/base_dimen_26"
                android:layout_toEndOf="@+id/open_door_choice_house_hint"
                android:layout_weight="1"
                android:textColor="@color/main_select_text_color" />

            <RelativeLayout
                android:id="@+id/open_door_next"
                android:layout_width="@dimen/base_dimen_40"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/base_dimen_26"
                android:layout_marginTop="@dimen/base_dimen_26">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/base_dimen_26"
                    android:src="@drawable/ico_open_door_next" />

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/base_dimen_26"
            android:layout_marginTop="@dimen/base_dimen_16"
            android:text="@string/open_door_choice_aim"
            android:textColor="@color/text_black" />

        <com.jinke.community.ui.widget.ScrollViewGridView
            android:id="@+id/open_door_choice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/base_dimen_30"
            android:layout_marginRight="@dimen/base_dimen_30"
            android:horizontalSpacing="@dimen/base_dimen_30"
            android:listSelector="@color/white"
            android:numColumns="3"
            android:scrollbars="none"
            android:verticalSpacing="@dimen/base_dimen_30">

        </com.jinke.community.ui.widget.ScrollViewGridView>

    </LinearLayout>

</LinearLayout>