<?xml version="1.0" encoding="utf-8"?>
<com.jinke.community.ui.widget.LoadingLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loadingLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/open_door_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_1"
            android:background="@color/line_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/base_dimen_20" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_1"
            android:background="@color/line_gray" />

        <include
            layout="@layout/open_door_info_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_380" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_1"
            android:background="@color/line_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/base_dimen_20" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_1"
            android:background="@color/line_gray" />

        <include
            layout="@layout/open_door_info_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_1"
            android:background="@color/line_gray" />


        <TextView
            android:id="@+id/tx_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base_dimen_40"
            android:text="@string/activity_visitors_share"
            android:textColor="@color/color_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/base_dimen_30"
            android:layout_marginLeft="@dimen/base_dimen_30"
            android:layout_marginRight="@dimen/base_dimen_30"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tx_sms"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:drawablePadding="@dimen/base_dimen_10"
                android:drawableTop="@mipmap/icon_share_sms"
                android:gravity="center_horizontal"
                android:text="@string/activity_visitors_sms"
                android:textColor="@color/color_text" />

            <TextView
                android:id="@+id/tx_wechart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:drawablePadding="@dimen/base_dimen_10"
                android:drawableTop="@mipmap/icon_share_wechart"
                android:gravity="center_horizontal"
                android:text="@string/activity_visitors_wechart"
                android:textColor="@color/color_text" />

            <TextView
                android:id="@+id/tx_qq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:drawablePadding="@dimen/base_dimen_10"
                android:drawableTop="@mipmap/icon_share_qq"
                android:gravity="center_horizontal"
                android:text="@string/activity_visitors_qq"
                android:textColor="@color/color_text" />
        </LinearLayout>
    </LinearLayout>
</com.jinke.community.ui.widget.LoadingLayout>
