<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_root"
        android:layout_width="@dimen/base_dimen_600"
        android:layout_height="@dimen/base_dimen_514"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/icon_common_dialog"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/base_dimen_282"
            android:gravity="center_horizontal"
            android:text="@string/thank"
            android:textColor="@color/fragment_user_color1"
            android:textSize="@dimen/base_dimen_30"/>

        <LinearLayout
            android:id="@+id/ll_operate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tx_cancel"
                android:layout_width="@dimen/base_dimen_0"
                android:layout_height="@dimen/base_dimen_96"
                android:layout_weight="1"
                android:gravity="center"
                android:text="知道了"
                android:textColor="@color/activity_authoried_color1"/>

            <TextView
                android:id="@+id/tx_sure"
                android:layout_width="@dimen/base_dimen_0"
                android:layout_height="@dimen/base_dimen_96"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/activity_authorization_relation_sure"
                android:textColor="@color/activity_authoried_color1"
                android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>