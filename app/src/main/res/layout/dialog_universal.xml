<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/shape_housekeeper_call_phone_bg"
              android:orientation="vertical"
              android:paddingTop="@dimen/base_dimen_42">

    <TextView
        android:id="@+id/tx_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/universal_title"
        android:textColor="@color/main_present_text_black"/>

    <TextView
        android:id="@+id/tx_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_dimen_30"
        android:gravity="center"
        android:textColor="@color/main_present_text_black"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_2"
        android:layout_marginTop="@dimen/base_dimen_32"
        android:background="@color/main_gray_line"/>

    <TextView
        android:id="@+id/tx_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/base_dimen_20"
        android:paddingTop="@dimen/base_dimen_30"
        android:text="@string/universal_sure"
        android:textColor="#107FFE"/>

</LinearLayout>