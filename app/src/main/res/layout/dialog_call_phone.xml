<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_call_phone_dialog_bg">
        <TextView
            android:id="@+id/tx_call_phone_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/base_dimen_56"
            android:paddingTop="@dimen/base_dimen_40"
            android:text="提示"
            android:textColor="@color/main_present_text_black" />
        <TextView
            android:id="@+id/tx_call_phone_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tx_call_phone_title"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/base_dimen_6"
            android:paddingBottom="@dimen/base_dimen_72"
            android:paddingLeft="@dimen/base_dimen_20"
            android:paddingRight="@dimen/base_dimen_20"
            android:text="您还没添加房屋，请先添加房屋"
            android:textColor="@color/main_present_text_black" />
        <TextView
            android:id="@+id/tx_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tx_call_phone_content"
            android:height="@dimen/base_dimen_2"
            android:background="@color/main_gray_line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_90"
            android:layout_below="@+id/tx_line"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tx_call_phone_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/spots_dialog_color" />
            <TextView
                android:id="@+id/tx_vertical_line"
                android:layout_width="@dimen/base_dimen_2"
                android:layout_height="match_parent"
                android:background="@color/main_gray_line" />
            <TextView
                android:id="@+id/tx_call_phone_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/spots_dialog_color" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>