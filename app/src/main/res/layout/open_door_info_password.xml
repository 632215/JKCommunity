                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/main_select_text_color"
                    android:textSize="@dimen/base_dimen_60" />

                <TextView
                    android:id="@+id/open_door_info_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/open_door_info_password"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/base_dimen_26"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/base_dimen_30" />

