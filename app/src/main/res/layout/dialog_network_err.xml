<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

    <LinearLayout
        android:id="@+id/rl_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_network_err_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/base_dimen_280"
            android:gravity="center_horizontal"
            android:text="服务器开小差了，不要走开,"
            android:textColor="@color/acticivty_bind_house_color1"
            android:textSize="@dimen/base_dimen_28"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="请等等，再试试吧…"
            android:textColor="@color/acticivty_bind_house_color1"
            android:textSize="@dimen/base_dimen_28"/>

        <TextView
            android:id="@+id/tx_refresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_dimen_68"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/base_dimen_20"
            android:paddingTop="@dimen/base_dimen_20"
            android:text="点击重试"
            android:textColor="@color/acticivty_bind_house_color2"
            android:textSize="@dimen/base_dimen_30"/>
    </LinearLayout>
</RelativeLayout>