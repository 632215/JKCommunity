<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tx_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            android:drawablePadding="@dimen/base_dimen_50"
            android:drawableTop="@mipmap/icon_activity_release"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/base_dimen_80"
            android:text="@string/activity_release_password_title"
            android:textColor="@color/activity_release_text_color1" />

        <TextView
            android:id="@+id/tx_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tx_address"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/base_dimen_30"
            android:paddingTop="@dimen/base_dimen_30"
            android:text="2397270"
            android:textColor="@color/activity_release_text_color2"
            android:textSize="@dimen/base_dimen_40"
            android:textStyle="bold"
            tools:text="2397270" />

        <TextView
            android:id="@+id/tx_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tx_password"
            android:background="@drawable/shape_parting_top_dotted_line_1dp"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/base_dimen_30"
            android:paddingTop="@dimen/base_dimen_30"
            android:text="@string/activity_release_password_tips"
            android:textColor="@color/activity_release_text_color2" />

        <View
            android:id="@+id/divider_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_20"
            android:layout_below="@+id/tx_tips"
            android:background="@color/circle_gray" />

        <RelativeLayout
            android:id="@+id/layout_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider_view"
            android:background="@color/white">

            <TextView
                android:id="@+id/tx_visit_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/base_dimen_40"
                android:paddingLeft="@dimen/base_dimen_35"
                android:paddingTop="@dimen/base_dimen_40"
                android:text="@string/activity_release_password_visit_address"
                android:textColor="@color/activity_visitor_pass_text_color1" />

            <TextView
                android:id="@+id/tx_visit_w_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tx_visit_address"
                android:paddingLeft="@dimen/base_dimen_40"
                android:textColor="@color/activity_release_text_color3"
                tools:text="洋房区12-14" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_purpose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_address"
            android:background="@color/white">

            <TextView
                android:id="@+id/tx_visit_purpose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/base_dimen_40"
                android:paddingLeft="@dimen/base_dimen_35"
                android:text="@string/activity_release_password_visit_purpose"
                android:textColor="@color/activity_visitor_pass_text_color1" />

            <TextView
                android:id="@+id/tx_visit_w_purpose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tx_visit_purpose"
                android:paddingLeft="@dimen/base_dimen_40"
                android:textColor="@color/activity_release_text_color3"
                tools:text="中介看房" />

            <View
                android:id="@+id/view_divider_purpose"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_2"
                android:layout_below="@+id/tx_visit_purpose"
                android:layout_marginLeft="@dimen/base_dimen_28"
                android:background="@color/circle_gray" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_purpose"
            android:background="@color/white"
            android:paddingTop="@dimen/base_dimen_35">

            <TextView
                android:id="@+id/tx_visit_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/base_dimen_35"
                android:paddingLeft="@dimen/base_dimen_35"
                android:text="@string/activity_release_password_time"
                android:textColor="@color/activity_visitor_pass_text_color1" />

            <TextView
                android:id="@+id/tx_visit_w_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tx_visit_time"
                android:paddingLeft="@dimen/base_dimen_40"
                android:textColor="@color/activity_release_text_color3"
                tools:text="2017年8月15日当天" />

            <View
                android:id="@+id/view_divider_date"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_2"
                android:layout_below="@+id/tx_visit_time"
                android:layout_marginLeft="@dimen/base_dimen_28"
                android:background="@color/circle_gray" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_times"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_time"
            android:background="@drawable/shape_parting_bottom_1dp"
            android:paddingTop="@dimen/base_dimen_35">

            <TextView
                android:id="@+id/tx_visit_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/base_dimen_40"
                android:paddingLeft="@dimen/base_dimen_35"
                android:text="@string/activity_release_password_times"
                android:textColor="@color/activity_visitor_pass_text_color1" />

            <TextView
                android:id="@+id/tx_visit_w_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tx_visit_times"
                android:paddingLeft="@dimen/base_dimen_40"
                android:textColor="@color/activity_release_text_color3"
                tools:text="一次" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_times"
            android:layout_marginBottom="@dimen/base_dimen_85"
            android:layout_marginTop="@dimen/base_dimen_85">

            <TextView
                android:id="@+id/tx_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base_dimen_30"
                android:background="@drawable/shape_corners_white_bg"
                android:paddingBottom="@dimen/base_dimen_30"
                android:paddingLeft="@dimen/base_dimen_50"
                android:paddingRight="@dimen/base_dimen_50"
                android:paddingTop="@dimen/base_dimen_30"
                android:text="@string/activity_release_password_msg"
                android:textColor="@color/activity_release_text_color4"
                android:textSize="@dimen/base_dimen_30" />

            <TextView
                android:id="@+id/tx_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/base_dimen_30"
                android:background="@drawable/shape_corners_blue_bg"
                android:paddingBottom="@dimen/base_dimen_30"
                android:paddingLeft="@dimen/base_dimen_50"
                android:paddingRight="@dimen/base_dimen_50"
                android:paddingTop="@dimen/base_dimen_30"
                android:text="@string/activity_release_password_chat"
                android:textColor="@color/white"
                android:textSize="@dimen/base_dimen_30" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
