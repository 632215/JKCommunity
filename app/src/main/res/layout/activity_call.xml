<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/rl_include"
            layout="@layout/item_address_select"/>

        <TextView
            android:id="@+id/tx_call_housekeeper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_include"
            android:layout_gravity="center"
            android:background="@drawable/shape_parting_top_12dp"
            android:drawableTop="@mipmap/icon_activity_call_house"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/base_dimen_34"
            android:paddingTop="@dimen/base_dimen_40"
            android:text="@string/activity_call_housekeeper"
            android:textColor="@color/color_text_first_title"
            android:textSize="@dimen/base_dimen_32"
            android:visibility="gone"
            tools:text="@string/activity_call_housekeeper"
            />

        <TextView
            android:id="@+id/tx_call_hot_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tx_call_housekeeper"
            android:layout_gravity="center"
            android:background="@drawable/shape_parting_top_12dp"
            android:drawableTop="@mipmap/icon_activity_call_hot"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/base_dimen_34"
            android:paddingTop="@dimen/base_dimen_40"
            android:text="@string/activity_call_hot_line"
            android:textColor="@color/color_text_first_title"
            android:textSize="@dimen/base_dimen_32"
            tools:text="@string/activity_call_hot_line"
            />

        <TextView
            android:id="@+id/tx_call_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tx_call_hot_line"
            android:layout_gravity="center"
            android:background="@drawable/shape_parting_top_12dp"
            android:drawableTop="@mipmap/icon_activity_call_servicer"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/base_dimen_34"
            android:paddingTop="@dimen/base_dimen_40"
            android:text="@string/activity_call_service"
            android:textColor="@color/color_text_first_title"
            android:textSize="@dimen/base_dimen_32"
            tools:text="@string/activity_call_service"
            />
    </RelativeLayout>
</ScrollView>