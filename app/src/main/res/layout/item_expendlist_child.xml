<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/payment__child_divider_bg">

    <ImageView
        android:id="@+id/image_fee_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/base_dimen_24"
        android:src="@mipmap/icon_pending_house"
        android:layout_marginLeft="@dimen/base_dimen_30"
        android:layout_marginTop="@dimen/base_dimen_24"/>

    <TextView
        android:id="@+id/cost_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/base_dimen_24"
        android:layout_marginLeft="@dimen/base_dimen_30"
        android:layout_marginTop="@dimen/base_dimen_24"
        android:layout_toRightOf="@+id/image_fee_icon"
        android:text="水电公摊费"
        android:textColor="@color/activity_pending_color2"
        tools:text="@string/payment_water_and_electricity"/>

    <TextView
        android:id="@+id/money_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="¥125.21"
        android:layout_marginRight="@dimen/base_dimen_30"
        android:textColor="@color/activity_pending_color2"
        tools:text="¥125.21"/>

    <View
        android:id="@+id/child_divider_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_2"
        android:layout_below="@+id/cost_name_text"
        android:layout_marginLeft="@dimen/base_dimen_32"
        android:layout_marginRight="@dimen/base_dimen_46"
        android:background="@color/payment_divider1_bg"/>
</RelativeLayout>