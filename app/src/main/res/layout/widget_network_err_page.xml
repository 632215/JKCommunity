<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/no_network_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_dimen_100"
        android:src="@mipmap/icon_loadlayout_network_err"/>

    <TextView
        android:id="@+id/tx_network_err_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_dimen_90"
        android:text="当前网络不太畅通哦~"
        android:textColor="@color/loaclayout_color1"
        android:textSize="@dimen/base_dimen_32"/>

    <TextView
        android:id="@+id/tx_network_err_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_dimen_20"
        android:text="（错误码：404）"
        android:textColor="@color/loaclayout_color3"
        android:textSize="@dimen/base_dimen_28"/>

    <TextView
        android:id="@+id/tx_network_err_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_dimen_160"
        android:background="@mipmap/icon_loadlayout_network_err_refresh"
        android:clickable="true"
        android:gravity="center"
        android:text="刷新"
        android:textColor="@color/white"
        android:textSize="@dimen/base_dimen_32"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tx_network_err_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_dimen_40"
        android:background="@mipmap/icon_loadlayout_network_err_return"
        android:clickable="true"
        android:gravity="center"
        android:text="返回管家"
        android:textColor="@color/loaclayout_color2"
        android:textSize="@dimen/base_dimen_32"
        android:visibility="gone"/>
</LinearLayout>